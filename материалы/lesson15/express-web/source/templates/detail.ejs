<%- include('includes/header.ejs') %>
        <% if (todo.done) { %>
        <p>Выполнено.</p>
        <% } %>
        <h1><%= todo.title %></h1>
        <% if (todo.desc) { %>
        <p><%= todo.desc %></p>
        <% } %>
        <p class="datetime">Создано: 
           <%= todo.createdAt.toLocaleString() %></p>
        <% if (todo.addendum) { %>
        <p class="addendum">
            <img src="/uploaded/<%= todo.addendum %>">
        </p>
        <% } %>
<%- include('includes/footer.ejs') %>
